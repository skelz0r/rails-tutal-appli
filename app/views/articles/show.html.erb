<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>

<ul>
  <% @article.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>

<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
